import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import javax.swing.ImageIcon;
import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.EventQueue;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.Insets;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;
import java.util.List;

import javax.swing.BorderFactory;
import javax.swing.DefaultListModel;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JList;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.ListSelectionModel;
import javax.swing.SwingConstants;
import javax.swing.border.Border;
import javax.swing.border.EmptyBorder;
import javax.swing.border.LineBorder;

public class EmployeeUI extends JFrame {

    private JPanel contentPane;
    private HeaderPanel headerPanel;
    private ChecklistPanel checklistPanel;
    private CompletedTaskPanel completedTaskPanel;

    public static void main(String[] args) {
        EventQueue.invokeLater(new Runnable() {
            public void run() {
                try {
                    EmployeeUI frame = new EmployeeUI("");
                    frame.setVisible(true);
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }
        });
    }

    public EmployeeUI(String userName) {
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 800, 600);
        setTitle("Employee Task Tracker");
        contentPane = new JPanel();
        contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
        setContentPane(contentPane);
        contentPane.setLayout(new BorderLayout(0, 0));

        headerPanel = new HeaderPanel(userName);
        contentPane.add(headerPanel, BorderLayout.NORTH);

        checklistPanel = new ChecklistPanel();
        contentPane.add(checklistPanel, BorderLayout.CENTER);

        completedTaskPanel = new CompletedTaskPanel();
        contentPane.add(completedTaskPanel, BorderLayout.EAST);
    }

    private class HeaderPanel extends JPanel {
        private JLabel titleLabel;
        private JLabel profileLabel;

        public HeaderPanel(String userName) {
            setPreferredSize(new Dimension(0, 80));
            setBackground(new Color(0, 128, 0));
            setLayout(new GridBagLayout());

            titleLabel = new JLabel("Employee Task Tracker");
            titleLabel.setFont(new Font("Tahoma", Font.BOLD, 24));
            titleLabel.setForeground(Color.WHITE);
            GridBagConstraints gbc_titleLabel = new GridBagConstraints();
            gbc_titleLabel.gridx = 0;
            gbc_titleLabel.gridy = 0;
            gbc_titleLabel.insets = new Insets(0, 20, 0, 0);
            add(titleLabel, gbc_titleLabel);

            JPanel profilePanel = new JPanel(new FlowLayout(FlowLayout.RIGHT, 10, 20));
            profilePanel.setOpaque(false);
            GridBagConstraints gbc_profilePanel = new GridBagConstraints();
            gbc_profilePanel.gridx = 1;
            gbc_profilePanel.gridy = 0;
            add(profilePanel, gbc_profilePanel);

            profileLabel = new JLabel("Profile");
            profileLabel.setForeground(Color.WHITE);
            profileLabel.setFont(new Font("Tahoma", Font.PLAIN, 18));
            profileLabel.setHorizontalTextPosition(SwingConstants.RIGHT);
            profileLabel.setIcon(new ImageIcon("profile.png"));
            profileLabel.setVerticalTextPosition(SwingConstants.CENTER);
            profileLabel.setVerticalAlignment(SwingConstants.CENTER);
            profilePanel.add(profileLabel);

            profileLabel.addMouseListener(new MouseAdapter() {
                public void mouseClicked(MouseEvent e) {
                    checklistPanel.toggleMenu();
                }
            });
        }

        public JLabel getProfileLabel() {
            return profileLabel;
        }
    }
    